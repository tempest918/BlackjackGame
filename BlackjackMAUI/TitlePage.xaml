<ContentPage
    x:Class="MyBlackjackMAUI.TitlePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Blackjack"
    BackgroundColor="{StaticResource FeltGreen}"
    Shell.NavBarIsVisible="False">

    <Grid>
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">

            <Image
                x:Name="logoImage"
                Margin="0,0,0,50"
                Source="blackjack_logo.png"
                WidthRequest="300" />

            <Button
                x:Name="btnNewGame"
                Clicked="btnNewGame_Click"
                Text="Start Game" />

            <Button
                x:Name="btnHistory"
                Clicked="btnHistory_Click"
                Text="View History" />

            <Button
                x:Name="btnSettings"
                Clicked="btnSettings_Click"
                Text="Settings" />

            <Button
                x:Name="btnQuit"
                Clicked="btnQuit_Click"
                Text="Quit Game" />

        </VerticalStackLayout>

        <Label
            Margin="10"
            FontSize="Small"
            HorizontalOptions="End"
            Text="A Game by Anthony Barnes"
            TextColor="DarkGray"
            VerticalOptions="End" />
    </Grid>
</ContentPage>
