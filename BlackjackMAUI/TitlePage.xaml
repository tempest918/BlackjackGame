<ContentPage
    x:Class="MyBlackjackMAUI.TitlePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Blackjack"
    BackgroundColor="{StaticResource FeltGreen}">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="20"
        VerticalOptions="Center">

        <Button
            x:Name="btnNewGame"
            Clicked="btnNewGame_Click"
            Text="New Game" />

        <Button
            x:Name="btnContinue"
            Clicked="btnContinue_Click"
            Text="Continue" />

        <Button
            x:Name="btnQuit"
            Clicked="btnQuit_Click"
            Text="Quit Game" />

    </VerticalStackLayout>
</ContentPage>
