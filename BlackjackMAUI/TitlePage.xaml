<ContentPage
    x:Class="MyBlackjackMAUI.TitlePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Blackjack"
    BackgroundColor="{StaticResource FeltGreen}">

    <Grid x:Name="mainGrid">
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="20"
            VerticalOptions="Center">

            <Button
                x:Name="btnNewGame"
                Clicked="btnNewGame_Click"
                Text="New Game" />


            <Button
                x:Name="btnSettings"
                Clicked="btnSettings_Click"
                Text="Settings" />

            <Button
                x:Name="btnQuit"
                Clicked="btnQuit_Click"
                Text="Quit Game" />

        </VerticalStackLayout>
    </Grid>
</ContentPage>
