<ContentPage
    x:Class="MyBlackjackMAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource FeltGreen}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="btnSaveQuit_Click" Text="Save and Quit" />
    </ContentPage.ToolbarItems>

    <Grid Padding="10" RowDefinitions="Auto,*,Auto">

        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label
                x:Name="lblDealerScore"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Dealer Score: 0" />
            <FlexLayout
                x:Name="pnlDealerHand"
                JustifyContent="Center"
                MinimumHeightRequest="130"
                Wrap="Wrap" />
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            Spacing="10"
            VerticalOptions="Center">

            <Label
                x:Name="lblStatus"
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="Place your bet!"
                VerticalOptions="Center" />

            <FlexLayout
                x:Name="pnlPlayerHand"
                JustifyContent="Center"
                MinimumHeightRequest="130"
                Wrap="Wrap" />
        </VerticalStackLayout>


        <VerticalStackLayout Grid.Row="2" Spacing="15">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Label
                    x:Name="lblPlayerScore"
                    FontSize="18"
                    Text="Player Score: 0" />
                <Label
                    x:Name="lblPlayerMoney"
                    FontSize="18"
                    Text="Player Money: $100" />
            </HorizontalStackLayout>

            <VerticalStackLayout x:Name="ControlPanels" HorizontalOptions="Center">

                <VerticalStackLayout x:Name="BettingPanel" Spacing="10">
                    <HorizontalStackLayout
                        x:Name="BettingControls"
                        HorizontalOptions="Center"
                        Spacing="10">
                        <Label Text="Bet:" VerticalOptions="Center" />
                        <Entry
                            x:Name="txtBet"
                            Keyboard="Numeric"
                            Placeholder="Amount"
                            PlaceholderColor="White"
                            WidthRequest="100" />
                        <Button
                            x:Name="btnBet"
                            Clicked="btnBet_Click"
                            Text="Bet" />
                        <Button Clicked="ClearBetButton_Click" Text="Clear" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout
                        x:Name="BettingShortcuts"
                        HorizontalOptions="Center"
                        Spacing="10">
                        <Button
                            Clicked="ChipButton_Click"
                            CommandParameter="5"
                            Text="$5" />
                        <Button
                            Clicked="ChipButton_Click"
                            CommandParameter="10"
                            Text="$10" />
                        <Button
                            Clicked="ChipButton_Click"
                            CommandParameter="25"
                            Text="$25" />
                        <Button
                            Clicked="ChipButton_Click"
                            CommandParameter="100"
                            Text="$100" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout
                    x:Name="InsuranceControls"
                    IsVisible="False"
                    Spacing="10">
                    <Label HorizontalOptions="Center" Text="Dealer has an Ace. Insurance?" />
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Button
                            x:Name="btnInsuranceYes"
                            Clicked="btnInsuranceYes_Click"
                            Text="Yes" />
                        <Button
                            x:Name="btnInsuranceNo"
                            Clicked="btnInsuranceNo_Click"
                            Text="No" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <HorizontalStackLayout
                    x:Name="ActionControls"
                    IsVisible="False"
                    Spacing="10">
                    <Button
                        x:Name="btnHit"
                        Clicked="btnHit_Click"
                        Text="Hit" />
                    <Button
                        x:Name="btnStay"
                        Clicked="btnStay_Click"
                        Text="Stay" />
                    <Button
                        x:Name="btnDoubleDown"
                        Clicked="btnDoubleDown_Click"
                        IsVisible="False"
                        Text="Double Down" />
                    <Button
                        x:Name="btnSplit"
                        Clicked="btnSplit_Click"
                        IsVisible="False"
                        Text="Split" />
                </HorizontalStackLayout>

                <VerticalStackLayout
                    x:Name="GameOverControls"
                    Margin="0,20,0,0"
                    IsVisible="False"
                    Spacing="10">

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Game Over! You're out of money." />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Button
                            x:Name="btnNewGame"
                            Clicked="btnNewGame_Click"
                            Text="Start New Game" />
                        <Button
                            x:Name="btnQuit"
                            Clicked="btnQuit_Click"
                            Text="Quit Game" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>

</ContentPage>