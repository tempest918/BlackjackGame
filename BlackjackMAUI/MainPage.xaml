<ContentPage
    x:Class="MyBlackjackMAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:converters="clr-namespace:MyBlackjackMAUI.Converters"
    x:Name="this"
    BackgroundColor="{StaticResource FeltGreen}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="btnStats_Click" Text="Stats" />
        <ToolbarItem Clicked="btnSettings_Click" Text="Settings" />
        <ToolbarItem Clicked="btnQuit_Click" Text="Return To Title" />
    </ContentPage.ToolbarItems>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid Padding="10" RowDefinitions="Auto,*,Auto">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DeviceStates">
                <VisualState x:Name="Phone">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding Source={x:Reference this}, Path=IsTablet, Converter={StaticResource InvertedBoolConverter}}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- ControlPanels Grid -->
                        <Setter TargetName="ControlPanels" Property="Grid.ColumnDefinitions" Value="*" />
                        <Setter TargetName="ControlPanels" Property="Grid.ColumnSpacing" Value="0" />
                        <Setter TargetName="ActionControls" Property="Grid.Column" Value="0" />
                        <Setter TargetName="InsuranceControls" Property="Grid.ColumnSpan" Value="1" />
                        <Setter TargetName="GameOverControls" Property="Grid.ColumnSpan" Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Tablet">
                    <VisualState.StateTriggers>
                        <StateTrigger IsActive="{Binding Source={x:Reference this}, Path=IsTablet}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- ControlPanels Grid -->
                        <Setter TargetName="ControlPanels" Property="Grid.ColumnDefinitions" Value="*,*" />
                        <Setter TargetName="ControlPanels" Property="Grid.ColumnSpacing" Value="20" />
                        <Setter TargetName="ActionControls" Property="Grid.Column" Value="1" />
                        <Setter TargetName="InsuranceControls" Property="Grid.ColumnSpan" Value="2" />
                        <Setter TargetName="GameOverControls" Property="Grid.ColumnSpan" Value="2" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label
                x:Name="lblDealerScore"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Dealer Score: 0" />
            <FlexLayout
                x:Name="pnlDealerHand"
                JustifyContent="Center"
                MinimumHeightRequest="130"
                Wrap="Wrap" />
        </VerticalStackLayout>

        <ScrollView x:Name="PlayerHandsScrollView" Grid.Row="1">
            <VerticalStackLayout VerticalOptions="End">

                <Label
                    x:Name="lblStatus"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Place your bet!"
                    VerticalOptions="Center" />

                <VerticalStackLayout x:Name="pnlPlayerHand" Spacing="10" />
            </VerticalStackLayout>
        </ScrollView>


        <VerticalStackLayout Grid.Row="2" Spacing="15">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Label
                    x:Name="lblPlayerScore"
                    FontSize="18"
                    Text="Player Score: 0" />
                <Label
                    x:Name="lblPlayerMoney"
                    FontSize="18"
                    Text="Player Money: $100" />
            </HorizontalStackLayout>

            <Grid x:Name="ControlPanels" HorizontalOptions="Center" RowSpacing="10">
                <!-- ColumnDefinitions and ColumnSpacing are now set by the VisualStateManager -->

                <VerticalStackLayout x:Name="BettingPanel" Spacing="10" Grid.Row="0" Grid.Column="0">
                    <Grid
                        x:Name="BettingControls"
                        ColumnDefinitions="Auto,*,Auto,Auto"
                        ColumnSpacing="10"
                        HorizontalOptions="Fill">
                        <Label
                            Grid.Column="0"
                            Text="Bet:"
                            VerticalOptions="Center" />
                        <Entry
                            x:Name="txtBet"
                            Grid.Column="1"
                            Keyboard="Numeric"
                            Placeholder="Amount"
                            PlaceholderColor="White" />
                        <Button
                            x:Name="btnBet"
                            Grid.Column="2"
                            Clicked="btnBet_Click"
                            Text="Bet" />
                        <Button
                            Grid.Column="3"
                            Clicked="ClearBetButton_Click"
                            Text="Clear" />
                    </Grid>

                    <Grid
                        x:Name="BettingShortcuts"
                        ColumnDefinitions="Auto,Auto,Auto,Auto"
                        ColumnSpacing="10"
                        HorizontalOptions="Center">
                        <Button
                            Grid.Column="0"
                            BackgroundColor="Firebrick"
                            Clicked="ChipButton_Click"
                            CommandParameter="5"
                            Text="$5" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="RoyalBlue"
                            Clicked="ChipButton_Click"
                            CommandParameter="10"
                            Text="$10" />
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Green"
                            Clicked="ChipButton_Click"
                            CommandParameter="25"
                            Text="$25" />
                        <Button
                            Grid.Column="3"
                            BackgroundColor="Black"
                            Clicked="ChipButton_Click"
                            CommandParameter="100"
                            Text="$100" />
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout
                    x:Name="InsuranceControls"
                    IsVisible="False"
                    Spacing="10"
                    Grid.Row="0" Grid.Column="0">
                    <!-- ColumnSpan is now set by the VisualStateManager -->
                    <Label HorizontalOptions="Center" Text="Dealer has an Ace. Insurance?" />
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Button
                            x:Name="btnInsuranceYes"
                            Clicked="btnInsuranceYes_Click"
                            Text="Yes" />
                        <Button
                            x:Name="btnInsuranceNo"
                            Clicked="btnInsuranceNo_Click"
                            Text="No" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <Grid
                    x:Name="ActionControls"
                    ColumnDefinitions="Auto,Auto,Auto,Auto"
                    ColumnSpacing="10"
                    HorizontalOptions="Center"
                    IsVisible="False"
                    Grid.Row="0">
                    <!-- Grid.Column is now set by the VisualStateManager -->
                    <Button
                        x:Name="btnHit"
                        Grid.Column="0"
                        Clicked="btnHit_Click"
                        Text="Hit" />
                    <Button
                        x:Name="btnStay"
                        Grid.Column="1"
                        Clicked="btnStay_Click"
                        Text="Stay" />
                    <Button
                        x:Name="btnDoubleDown"
                        Grid.Column="2"
                        Clicked="btnDoubleDown_Click"
                        IsVisible="False"
                        Text="Double Down" />
                    <Button
                        x:Name="btnSplit"
                        Grid.Column="3"
                        Clicked="btnSplit_Click"
                        IsVisible="False"
                        Text="Split" />
                </Grid>

                <VerticalStackLayout
                    x:Name="GameOverControls"
                    Margin="0,20,0,0"
                    IsVisible="False"
                    Spacing="10"
                    Grid.Row="0" Grid.Column="0">
                    <!-- ColumnSpan is now set by the VisualStateManager -->

                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="Game Over! You're out of money." />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                        <Button
                            x:Name="btnNewGame"
                            Clicked="btnNewGame_Click"
                            Text="Start New Run" />
                        <Button
                            x:Name="btnQuit"
                            Clicked="btnQuit_Click"
                            Text="Quit Game" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </Grid>
        </VerticalStackLayout>
    </Grid>

</ContentPage>