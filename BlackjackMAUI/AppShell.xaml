<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyBlackjackMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyBlackjackMAUI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MyBlackjackMAUI">

    <Shell.Resources>
        <ResourceDictionary>
            <toolkit:MediaElement
                x:Key="BgmPlayer"
                ShouldAutoPlay="True"
                ShouldLoopPlayback="True"
                Source="embed://bgm.mp3" />
        </ResourceDictionary>
    </Shell.Resources>

    <ShellContent ContentTemplate="{DataTemplate local:TitlePage}" Route="TitlePage" />

</Shell>
